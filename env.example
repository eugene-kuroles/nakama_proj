# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/spellit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=spellit

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=240
REFRESH_TOKEN_EXPIRE_DAYS=7

# nakama API Integration
NAKAMA_API_URL=https://api.spellit.ai
NAKAMA_API_KEY=your-nakama-api-key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Environment
ENV=development
DEBUG=true
